  <main id="main">

    <!-- ======= Portfolio Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Ficha Médica</h2>
          <p>Por favor, ingrese los datos para la ficha médica del paciente en el siguiente formulario</p>
        </div>
        <!--aqui deberia ir el mt-5-->
        <div class="mt-5 mt-lg-0">

          <ul class="nav nav-tabs d-flex justify-content-between" id="myForm">
            <li><a href="#one" class="panes-isaac">General </a></li>
            <li><a href="#two" class="panes-isaac">Antecedentes </a></li>
            <li><a href="#three" class="panes-isaac">Signos Vitales </a></li>
            <li><a href="#four" class="panes-isaac">Diagnóstico</a></li>
          </ul><br>

          <form id="formRecord" action="" role="form" method="post">
            <div class="tab-content">
              <div class="tab-pane active" id="one">
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="id_card" class="col-form-label col-md-2 labels-isaac">Cédula:</label>
                  <input class="form-control col-md-6" type="text" minlength="10" maxlength="10" name="id_card"
                    id="id_card" placeholder="Ingrese Cédula" required />
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="reason" class="col-form-label col-md-2 labels-isaac">Motivo de la Consulta:</label>
                  <textarea class="form-control col-md-6" name="reason" maxlength="200" id="reason" rows="5"
                    cols="10">Motivo de la Consulta</textarea><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="enfermdad" class="col-form-label col-md-2 labels-isaac">Enfermedad Actual:</label>
                  <input class="form-control col-md-6" type="text" maxlength="200" name="enfermedad" id="enfermedad"
                    placeholder="Ingrese la enfermdad actual del paciente"  required/>
                  <div class="col-md-2"></div>
                </div><br>
              </div>
              <div class="tab-pane" id="two">
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="embarazo" name="embarazo">
                  <label for="embarazo" class="col-form-label col-md-2 labels-isaac col-9">Embarazo:</label>
                  <div class="col-md-2"></div>
                </div><br>

                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente1" name="antecedente1">
                  <label for="antecedente1" class="col-form-label col-md-2 labels-isaac col-9">Alergia
                    Antibiótico</label><br>
                  <div class="col-md-2"></div>
                </div><br>

                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente2" name="antecedente2">
                  <label for="antecedente2" class="col-form-label col-md-2 labels-isaac col-9">Alergia
                    Anestesia</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente3" name="antecedente3">
                  <label for="antecedente3" class="col-form-label col-md-2 labels-isaac col-9">Hemorragias</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente4" name="antecedente4">
                  <label for="antecedente4" class="col-form-label col-md-2 labels-isaac col-9">VHI/SIDA</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente5" name="antecedente5">
                  <label for="antecedente5" class="col-form-label col-md-2 labels-isaac col-9">Asma</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente6" name="antecedente6">
                  <label for="antecedente6" class="col-form-label col-md-2 labels-isaac col-9">Diabetes</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente7" name="antecedente7">
                  <label for="antecedente7" class="col-form-label col-md-2 labels-isaac col-9">Hipertensión</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente8" name="antecedente8">
                  <label for="antecedente8" class="col-form-label col-md-2 labels-isaac col-9">Enfermedades
                    Cardiacas</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <input type="checkbox" class="col-1" id="antecedente9" name="antecedente9">
                  <label for="antecedente9" class="col-form-label col-md-2 labels-isaac col-9">Tuberculosis</label><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="otraenfermdad" class="col-form-label col-md-2">Otras:</label>
                  <input class="form-control col-md-6" type="text" maxlength="200" name="otraenfermdad"
                    id="otraenfermdad" placeholder="Ingrese otras emfermedades del paciente"/>
                  <div class="col-md-2"></div>
                </div><br>
              </div><br>



              <div class="tab-pane" id="three">
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="presion" class="col-form-label col-md-2 labels-isaac">Presión Arterial:</label>
                  <input class="form-control col-md-6" type="text" maxlength="10" name="presion" id="presion"
                    placeholder="Ingrese el valor" required />
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="frecuenciac" class="col-form-label col-md-2 labels-isaac">Frecuencia Cardiaca:</label>
                  <input class="form-control col-md-6" type="text" maxlength="200" name="frecuenciac" id="frecuenciac"
                    placeholder="Ingrese el valor en minutos" required/>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="frecuenciar" class="col-form-label col-md-2 labels-isaac">Frecuencia Respiratoria:</label>
                  <input class="form-control col-md-6" type="text" maxlength="200" name="frecuenciar" id="frecuenciar"
                    placeholder="Ingrese el valor en minutos" required/>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="temperatura" class="col-form-label col-md-2 labels-isaac">Temperatura Corporal:</label>
                  <input class="form-control col-md-6" type="text" maxlength="200" name="temperatura" id="temperatura"
                    placeholder="Ingrese el valor en C" required />
                  <div class="col-md-2"></div>
                </div><br>
              </div>

              <div class="tab-pane" id="four">
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="diagnostico" class="col-form-label col-md-2 labels-isaac">Diagnostico:</label>
                  <textarea class="form-control col-md-6" name="diagnostico" maxlength="200" id="diagnostico" rows="5"
                    cols="10">Diagnóstico para el Paciente</textarea><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-2"></div>
                  <label for="tratamiento" class="col-form-label col-md-2 labels-isaac">Tratamiento:</label>
                  <textarea class="form-control col-md-6" name="tratamiento" id="tratamiento" maxlength="200" rows="5"
                    cols="10">Tratamiento para el Paciente</textarea><br><br>
                  <div class="col-md-2"></div>
                </div><br>
                <div class="form-row">
                  <div class="col-md-4"></div>
                  <button type="submit" class="btn btn-primary">Guardar</button><br>
                  <div class="col-md-4"></div>
                </div><br>
              </div>
            </div>
          </form>
        </div>
      </div>
