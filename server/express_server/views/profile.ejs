    <main id="main">

      <!-- ======= Portfolio Section ======= -->
      <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

          <div class="section-title">
            <h2>Mi Perfil</h2>
            <p>Por favor, ingrese los siguientes datos</p>
          </div>
          <div class="row">
            <div class="col-md-2"></div>
            <h4 class="col-md-8">Datos Generales:</h4>
            <div class="col-md-2"></div>
          </div>

          <div class="mt-5 mt-lg-0">
            <form id="formProfile" enctype="multipart/form-data">

              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="idCard" class="col-form-label col-md-2">Cédula:</label>
                <input class="form-control col-md-6" type="text"  minlength="10" maxlength="10"
                  placeholder="ej: 0909090909" name="idCard" id="idCard" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="name" class="col-form-label col-md-2">Nombre Completo:</label>
                <input class="form-control col-md-6" placeholder="ej: Juan Antonio Nuñez Almeida" type="text"
                  name="name" id="name"  required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="age" class="col-form-label col-md-2">Edad:</label>
                <input class="form-control col-md-6" type="number" min=18 max=100 name="age" id="age" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="phone" class="col-form-label col-md-2">Teléfono:</label>
                <input class="form-control col-md-6" placeholder="ej: 0909090909" type="text" minlength="10"
                  maxlength="10" name="phone" id="phone" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="recognitions" class="col-form-label col-md-2">Reconocimientos:</label>
                <input class="form-control col-md-6" type="text" placeholder="ej: Rec. Nombre del Reconocimiento"
                  name="recognitions" id="recognitions" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="degree" class="col-form-label col-md-2">Títulos:</label>
                <input class="form-control col-md-6" type="text" placeholder="ej: Odontólogo General" name="degree"
                  id="degree" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="school" class="col-form-label col-md-2">Universidad:</label>
                <input class="form-control col-md-6" type="text" name="school" placeholder="ej:  UCSG" id="school"
                  required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="phrase" class="col-form-label col-md-2">Frase Personal:</label>
                <input class="form-control col-md-6" type="text" name="phrase" placeholder="ej: Servir y Proteger"
                  id="phrase" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="address" class="col-form-label col-md-2">Dirección:</label>
                <input class="form-control col-md-6" type="text" name="address"
                  placeholder="ej: Ciudad, Calle, Edificio, Nro casa" id="address" required />
                <div class="col-md-2"></div>
              </div><br>

              <div class="form-row">
                <div class="col-md-4"></div>
                <button type="submit" class="btn btn-info center col-md-4" id="save"> Actualizar Datos</button>
                <div class="col-md-4"></div>
              </div>
            </form><br>
            
            <div class="row">
              <div class="col-md-2"></div>
              <h4 class="col-md-8">Imagen de Perfil:</h4>
              <div class="col-md-2"></div>
            </div>
            <form id="formPictureProfile" enctype="multipart/form-data">
              <div class="form-row">
                <div class="col-md-2"></div>
                <label for="pictureUrl" class="col-form-label col-md-2">Subir imagen de perfil:</label>
                <input class="form-control col-md-6" type="file" name="pictureUrl" id="pictureUrl"
                  accept="image/png, image/jpeg" required />
                <div class="col-md-2"></div>
              </div><br>
              <div class="form-row">
                <div class="col-md-4"></div>
                <button type="submit" class="btn btn-info center col-md-4" id="savePicture"> Actualizar Foto </button>
                <div class="col-md-4"></div>
              </div>
            </form><br>

          </div>


        </div>
      </section><!-- End Portfolio Section -->

